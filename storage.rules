rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ==================== Helper Functions ====================
    
    // Check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Check if user is an admin with active status
    function isAdmin() {
      return isSignedIn() && 
             firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid)) &&
             firestore.get(/databases/(default)/documents/admins/$(request.auth.uid)).data.role == 'admin' &&
             firestore.get(/databases/(default)/documents/admins/$(request.auth.uid)).data.isActive == true;
    }
    
    // Check if user is an editor or admin with active status
    function isEditor() {
      return isSignedIn() && 
             firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid)) &&
             firestore.get(/databases/(default)/documents/admins/$(request.auth.uid)).data.role in ['admin', 'editor'] &&
             firestore.get(/databases/(default)/documents/admins/$(request.auth.uid)).data.isActive == true;
    }
    
    // Validate image file type
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }
    
    // ==================== Product Images ====================
    // Public read, authenticated editors can upload/delete
    match /products/{productId}/{imageId} {
      allow read: if true; // Public read for all users
      allow write: if isEditor() && isValidImage();
      allow delete: if isEditor();
    }
    
    // ==================== Category Images ====================
    // Public read, authenticated editors can upload/delete
    match /categories/{categoryId}/{imageId} {
      allow read: if true; // Public read for all users
      allow write: if isEditor() && isValidImage();
      allow delete: if isEditor();
    }
    
    // ==================== Deny All Other Paths ====================
    // Explicitly deny access to any other storage paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
