# Firebase Configuration Example
# Copy this file to .env and fill in your Firebase project credentials
# Get these values from Firebase Console > Project Settings > General

VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Admin Email Restriction
# Only this email can login via Google Sign-In
VITE_ADMIN_EMAIL=admin@yourstore.com

# Optional: Use Firebase Emulators for local development
# VITE_USE_FIREBASE_EMULATORS=true
